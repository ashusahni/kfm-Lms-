# GOOGLE_CLIENT_SECRET=
# PAYPAL_CLIENT_ID=
# PAYPAL_SECRET=
# RAZORPAY_API_KEY=
# RAZORPAY_API_SECRET=

FIT_KARNATAKA_ENABLED=false
