APP_NAME=rocketlms
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_VERSION=1.8
APP_URL=http://127.0.0.1:8000

LOG_CHANNEL=stack
JWT_SECRET=
API_KEY=your-secret-api-key

# When false: frontend is separate (e.g. Vercel). Set FRONTEND_URL for CORS.
# When true: serve React from this backend (copy frontend build to backend/public/spa/).
SERVE_REACT_FROM_BACKEND=false
FRONTEND_URL=

# ---------------------------------------------------------------------------
# Database: MySQL (local / external) OR PostgreSQL (e.g. Render)
# ---------------------------------------------------------------------------
# For Render / production with PostgreSQL: set DB_CONNECTION=pgsql and DATABASE_URL
# (Laravel parses DATABASE_URL; you can leave DB_HOST/DB_PORT/DB_DATABASE/DB_USERNAME/DB_PASSWORD unset).
#
# For MySQL (local or external e.g. Railway/PlanetScale): set DB_CONNECTION=mysql
# and either DATABASE_URL or DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD.
# ---------------------------------------------------------------------------

# Option 1 – PostgreSQL (e.g. Render). Use Internal Database URL from Render.
# DB_CONNECTION=pgsql
# DATABASE_URL=postgres://USER:PASSWORD@HOST/DATABASE?sslmode=require

# Option 2 – MySQL (local or external). For local: mysql -u root -p dbname < Databases/KFM.sql
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kfm_lms
DB_USERNAME=root
DB_PASSWORD=

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Platform Title"

# S3 / MinIO (optional)
MINIO_KEY=
MINIO_SECRET=
MINIO_REGION=
MINIO_BUCKET=
MINIO_ENDPOINT=

# OAuth (optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT=/facebook/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT=/google/callback

# Payments (optional)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_CURRENCY=USD
PAYU_DEFAULT_GATEWAY=money
PAYU_MONEY_MODE=test
PAYU_MONEY_KEY=
PAYU_MONEY_SALT=
PAYU_MONEY_AUTH=
RAZORPAY_API_KEY=
RAZORPAY_API_SECRET=

FIT_KARNATAKA_ENABLED=false
